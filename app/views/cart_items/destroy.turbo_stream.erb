<% if @cart.cart_items.blank? %>
  <%= turbo_stream.update 'cart_content' do %>
    <%= render 'carts/cart_content', cart: @cart %>
  <% end %>
<% else %>
  <%= turbo_stream.remove @cart_item %>
  <%= turbo_stream.update 'cart_info' do %>
    <%= render 'carts/cart_info', cart: @cart %>
  <% end %>
<% end %>
